<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :type_of_assignment %><br>
    <%= f.select :type_of_assignment, options_for_select(%w[Homework Project Studying]) %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :due_date %><br>
    <%= f.date_select :due_date %>
  </div>
  <div class="field">
    <%= f.label :expected_grade %><br>
    <%= f.text_field :expected_grade %>
  </div>
  <div class="field">
    <%= f.label :actual_grade %><br>
    <%= f.text_field :actual_grade %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
